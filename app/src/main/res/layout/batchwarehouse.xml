<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="scroll|enterAlways"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <TextView
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批量仓库"
                android:layout_centerInParent="true"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/base"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Goodsreceived"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 耗材待收货"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/hcdsh"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/Unitreceived"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 部件待收货"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/bjdsh"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"

                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/Receivedorder"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 部件已接单"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/bjyjd"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/Billentry"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 部件入库单"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/bjrkd"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/Formaterial"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 待领料单据"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/dlldj"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/Pendingshipment"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 领料待出库"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/dllck"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/Allmaterial"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 所有领料单"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/sylld"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/Outboundorder"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 耗材出库单"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/hcckd"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/Inventory"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 耗材库存量"
                android:drawableLeft="@mipmap/hckcl"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />

            <TextView
            android:id="@+id/Tobewarehouse"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" 成品待入库"
            android:drawableLeft="@mipmap/cpdrk"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/next"
            android:paddingLeft="10dp"
            />

            <TextView
                android:id="@+id/Asinglestorage"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 成品入库单"
                android:drawableLeft="@mipmap/cprkd"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/Flatinventory"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 成品库存量"
                android:drawableLeft="@mipmap/cpkcl"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
