<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:hint="维修商代码:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText

                        android:gravity="center"
                        android:textSize="15sp"
                        android:hint="维修商代码"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:id="@+id/supplierCode"
                        android:background="@drawable/edit_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />

                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备状态"
                    />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.zhujia.dxracer_factory.Tools.MyradionGroup
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RadioButton

                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:id="@+id/y"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="正常"
                                    />
                                <RadioButton
                                    android:layout_weight="1"
                                    android:id="@+id/n"
                                    android:layout_toRightOf="@+id/food"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:button="@null"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="停用"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    />


                            </LinearLayout>

                        </LinearLayout>

                    </com.example.zhujia.dxracer_factory.Tools.MyradionGroup>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="维修商名称:"
                android:textColor="#000000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/supplierName"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:hint="维修商名称"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:hint="维修商联系人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/supplierConPerson"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:hint="维修商联系人"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:hint="维修商联系人手机:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/supplierConPersonTel"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:hint="维修商联系人手机"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:text="取消"
            android:background="@color/base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button

            android:id="@+id/okbtn"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>