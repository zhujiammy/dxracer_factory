<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:text="保养申请编号:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText

                        android:gravity="center"
                        android:textSize="15sp"
                        android:hint="保养申请编号"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:id="@+id/maintainNo"
                        android:background="@drawable/edit_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />

                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保养状态"
                    />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.zhujia.dxracer_factory.Tools.MyradionGroup
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RadioButton

                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:id="@+id/A"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="新建"
                                    />
                                <RadioButton
                                    android:layout_weight="1"
                                    android:id="@+id/B"
                                    android:layout_toRightOf="@+id/food"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:button="@null"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已审核"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    />

                                <RadioButton
                                    android:layout_weight="1"
                                    android:id="@+id/C"
                                    android:layout_toRightOf="@+id/food"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:button="@null"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="未通过"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RadioButton

                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:id="@+id/D"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="保养成功"
                                    />
                                <RadioButton
                                    android:layout_weight="1"
                                    android:id="@+id/E"
                                    android:layout_toRightOf="@+id/food"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:button="@null"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="保养失败"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    />

                                <RadioButton
                                    android:layout_weight="1"
                                    android:id="@+id/F"
                                    android:layout_toRightOf="@+id/food"
                                    android:layout_centerVertical="true"
                                    android:textColor="@drawable/radiobutton_fontcolor"
                                    android:background="@drawable/radionbutton_cargonname"
                                    android:button="@null"
                                    android:textSize="13sp"
                                    android:padding="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已生成付款单"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                    </com.example.zhujia.dxracer_factory.Tools.MyradionGroup>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">

            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"

                android:text="设备维修商:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Spinner
                    android:id="@+id/equipment"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:spinnerMode="dialog"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"

                android:text="发起人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Spinner
                    android:id="@+id/originator"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:spinnerMode="dialog"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="确认人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/checkName"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:hint="确认人"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="保养开始时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/startTime"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:hint="保养开始时间"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">


            </LinearLayout>
            <TextView
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:text="设备编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/maintenancePeopleOut"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"
                        android:background="@drawable/edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/base"
                android:layout_width="match_parent"
                android:layout_height="0.1dp">

            </LinearLayout>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="保养结束时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:spinnerMode="dialog"
                        android:id="@+id/endTime"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:hint="保养结束时间"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:text="取消"
            android:background="@color/base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button

            android:id="@+id/okbtn"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>